<Window x:Class="mHealth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mHealth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Accelerometer: " HorizontalAlignment="Left" Margin="250,105,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="main_accel" Content="Label" HorizontalAlignment="Left" Margin="350,105,0,0" VerticalAlignment="Top"/>
        <Label Content="Gyroscope: " HorizontalAlignment="Left" Margin="250,145,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="main_gyro" Content="Label" HorizontalAlignment="Left" Margin="350,145,0,0" VerticalAlignment="Top"/>
        <Label Content="Magnetometer: " HorizontalAlignment="Left" Margin="250,185,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="main_mag" Content="Label" HorizontalAlignment="Left" Margin="350,185,0,0" VerticalAlignment="Top"/>
        <Label Content="PPG: " HorizontalAlignment="Left" Margin="250,225,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="main_ppg" Content="Label" HorizontalAlignment="Left" Margin="350,225,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
